<Window x:Class="DaveFitness.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="1300">
  <Grid>
    <Grid.Background>
      <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
        <GradientStop Color="Black" Offset="1"/>
        <GradientStop Color="#FFC9F500"/>
        <GradientStop Color="#FFA0FD7D" Offset="0.815"/>
      </LinearGradientBrush>
    </Grid.Background>
    <Canvas HorizontalAlignment="Left" Height="549" Margin="10,10,0,0" VerticalAlignment="Top" Width="650" Background="Black"/>
    <Label Name="exerciseLbl" Content="Exercise" HorizontalAlignment="Left" Margin="750,50,0,0" VerticalAlignment="Top" Height="100" Width="500" FontSize="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    <Label Name="trainLbl" Content="Train" HorizontalAlignment="Left" Height="100" Margin="750,155,0,0" VerticalAlignment="Top" Width="500" FontSize="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    <Label Name="testLbl" Content="Test" HorizontalAlignment="Left" Height="100" Width="500" Margin="750,260,0,0" VerticalAlignment="Top" FontSize="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

  </Grid>
</Window>
